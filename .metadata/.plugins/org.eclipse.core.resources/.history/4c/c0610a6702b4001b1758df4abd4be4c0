
public abstract class Casa extends Tabuleiro {
	
	//Atributos
	
		//Declaração do número da casa
	protected int numeroCasa;
	
	//Construtor - default
	public Casa() {
		
	}
	
	// Construtor - com argumentos
	public Casa(int numeroCasa) {
		this.numeroCasa = numeroCasa;
	}
	
	// Construtor - cópia
	public Casa(Casa casa) {
		this.numeroCasa = casa.getNumeroCasa();
	}

	
	// Acessores
	public int getNumeroCasa() {
		return numeroCasa;
	}	
	
	// Comportamentos
	
	//Métodos Adicionais
	
	//ToString do Casa com as respetivas informações
		@Override
		public String toString() {
			return "Casa [Número da casa = " + getNumeroCasa() + "]";
		}
		
		//Clonar o tabuleiro
		public Casa clone() {
			return new Casa(this);
		}
		
		//Permite saber se os tabuleiros são iguais
		public boolean equals(Casa casa) {
			if(casa == null)
				return false;
			else if (jogador1.equals( tabuleiro.getJogador1() ) || jogador2.equals( tabuleiro.getJogador2() ))
				return true;
			else if (casas.equals( tabuleiro.getCasas() ))
				return true;
			else
				return false;
		}
}
